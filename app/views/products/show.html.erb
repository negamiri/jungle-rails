<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <div class="rating-section">
          <dt>Rating</dt>
          <dd><% rating = @product.reviews.average(:rating).to_i %>
          <% rating.times do %>
            <span class="rated glyphicon glyphicon-star"></span>
          <% end %>

          <% blank = 5 - rating %>
          <% blank.times do %>
            <span class="not-rated glyphicon glyphicon-star-empty"></span>
          <% end %>
          </dd>
          </div>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <div class="row">
        <%= render "review_form" %>
      </div>
    <% end %>

    <div class="row">
      <div class="reviews">
        <%= render "reviews" %>
      </div>
    </div>

  </article>

</section>
